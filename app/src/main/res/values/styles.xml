<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ViewMatch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="EditTextTheme" parent="ViewMatch">
        <item name="android:background">@drawable/all_background_edit_text</item>
        <item name="android:drawablePadding">@dimen/padding_bottom_top_drawble_main_edit_text</item>
        <item name="android:paddingBottom">@dimen/padding_bottom_top_drawble_main_edit_text</item>
        <item name="android:paddingTop">@dimen/padding_bottom_top_drawble_main_edit_text</item>
        <item name="android:textColor">@color/colorEditText</item>
        <item name="android:textColorHint">@color/colorHintEditText</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>
